FROM ubuntu:rolling

RUN locale-gen en_US.UTF-8
ENV LANG en_US.UTF-8
ENV LANGUAGE en_US:en
ENV LC_ALL en_US.UTF-8

RUN set -x \
    && apt-get -qq update \
    && apt-get -qq install \
        build-essential clang \
        cmake libclang-common-3.5-dev libxi-dev qtbase5-dev libqt5x11extras5-dev \
        qttools5-dev qttools5-dev-tools libgcrypt20-dev zlib1g-dev libxtst-dev \
        xvfb libyubikey-dev libykpers-1-dev

CMD ["/keepassxc/src/travis_linux_script.sh"]
